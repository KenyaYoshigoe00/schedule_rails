<div class="show">
  <p><%= link_to "編集", [:edit, @content] %></p>

  <h3><%= @content.title %></h3>

  <table>
    <tr>
      <th>開始日</th>
      <td><%= @content.start_date.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
      <th>終了日</th>
      <td><%= @content.end_date.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td>
        <% if @content.all_day == true %>
        ◯
        <% else @content.all_day == false %>
        <% end %>
        </td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @content.memo %></td>
    </tr>
  </table>

  <p><%= link_to "一覧に戻る", :contents %></p>
</div>