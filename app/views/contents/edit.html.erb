<h3>予定編集</h3>

<%= render "shared/error", obj: @content %>

<%= form_with model: @content do |f| %>
  <p>
     <%= f.label :title ,"タイトル" %><br>
     <tr><%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :start_date ,"開始日" %><br>
    <%= f.date_field :start_date %>
  </p>

  <p>
    <%= f.label :end_date ,"終了日" %><br>
    <%= f.date_field :end_date %>
  </p>

  <p>
    <%= f.check_box :all_day, {}, "true", "false" %>終日の場合はチェックを入れます
  </p>

  <p>
    <%= f.label :memo ,"スケジュールメモ" %><br>
    <%= f.text_area :memo %>
  </p>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する"%></li>
      <li><%= link_to "スケジュール一覧へ戻る", :contents %></li>
    </ul>
  </div>
<% end %>